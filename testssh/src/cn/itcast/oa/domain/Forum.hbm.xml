<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.itcast.oa.domain">

	<class name="Forum" table="itcast_forum">
		<id name="id">
            <generator class="native"/>
		</id>
		<property name="name"/>
		<property name="description"/>
         <property name="position"/>
         
         <property name="topicCount"></property>
         <property name="articleCount"></property>
     <set name="topics" lazy="false">
     <key column="forumId"></key>
     <one-to-many class="Topic"></one-to-many>
     </set>       
	<many-to-one name="lastTopic" class="Topic" column="lastTopicId" unique="true" lazy="false"></many-to-one>
	</class>
	
</hibernate-mapping>
